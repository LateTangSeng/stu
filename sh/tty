#! /bin/sh
#
# Simulate a TTY. 
#
# INVOCATION 
#
#    sh/tty COMMAND
#
# Execute COMMAND as if in a TTY. 
#

#\
export TERM=xterm

# The next line is executed by sh, not by tcl \
exec tclsh8.6 "$0" ${1+"$@"}

package require Expect

set stty_init "-opost"
set timeout -1
eval [list spawn -noecho] $argv
expect
exit [lindex [wait] 3]
