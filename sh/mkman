#! /bin/sh
#
# Generate the manpage from the template.
# 
# INPUT FILES
#	
#	stu.1.in	The Stu manpage template
#	VERSION
#
# OUTPUT FILES
#
#	stu.1		The Stu manpage
#

VERSION="$(cat VERSION)" 
DATE="$(date '+%B %Y')" 

{
	echo '.\" Autogenerated on' "$(date) by $0"
	sed -e 's,\$STU_VERSION,'"$VERSION"',g;s,\$DATE,'"$DATE"',g' <stu.1.in 
} >stu.1
